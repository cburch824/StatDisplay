<Window x:Class="X4Foundations.FrontEnd.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:X4Foundations"
        xmlns:view="clr-namespace:X4Foundations.FrontEnd.Wpf.View"
        mc:Ignorable="d"
        Title="X4: Foundations Stat Display" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Engines">
                <view:EnginesView></view:EnginesView>
            </TabItem>
            <TabItem Header="Bullets">
                <view:BulletsView></view:BulletsView>
            </TabItem>
            <TabItem Header="Weapons">
                <view:WeaponsView></view:WeaponsView>
            </TabItem>
            <TabItem Header="Turrets">
                <view:TurretsView></view:TurretsView>
            </TabItem>
            <TabItem Header="Ships">
                <view:ShipsView></view:ShipsView>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
